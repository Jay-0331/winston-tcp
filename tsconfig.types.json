{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "declaration": true, // This is critical for generating .d.ts files
    "emitDeclarationOnly": true, // Your script already has this flag
    "outDir": "./dist", // Output declarations to dist folder
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true
  },
  "include": ["index.ts", "TcpTranport.ts"], // Adjust based on your file structure
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
